
<%- include('partials/_header', { title: 'List Urls' }) %>
  <main style="margin: 1em;">
    <h3>My URLs</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Delete</th>
          <th scope="col">Edit</th>
        </tr>
      </thead>
      <tbody>
        <% for(let url of Object.values(urls)) { %>
          <tr>
            <td><%= url.shortURL %></td>
            <td><%= url.longURL %></td>
            <td>
            <form method="POST" action="/urls/<%= url.shortURL %>/delete">
            <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
            <td>
              <a href="/urls/<%= url.shortURL %>" class="btn btn-primary">Edit</a>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </main>
<%- include partials/_footer %>
